<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f5f5f5"
    app:cardElevation="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_margin="@dimen/dp_4">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:maxLines="1"
                android:text="商品标题"
                android:textColor="#333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_product_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_product_num"
                android:layout_alignLeft="@+id/tv_product_name"
                android:layout_alignStart="@+id/tv_product_name"
                android:layout_marginBottom="7dp"
                android:text="规格:各种规格"
                android:textColor="#999"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tv_product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignLeft="@+id/tv_product_specifications"
                android:layout_alignStart="@+id/tv_product_specifications"
                android:text="数量"
                android:textColor="#999"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="人民币"
                    android:textColor="@color/tv_price_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_shipmet_price"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="运费"
                android:textColor="#666"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_slip_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:textColor="#666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tax"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#fff"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="缴税"
                android:textColor="#666"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_tax"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:textColor="#666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="留言"
            android:textColor="#666"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="#fff"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="下单时间"
            android:textColor="#666"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</android.support.v7.widget.CardView>
