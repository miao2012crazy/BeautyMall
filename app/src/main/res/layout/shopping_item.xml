<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_training"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2"
    android:background="@drawable/shape_bg"
    android:layout_weight="1"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_check"
            style="@style/cb_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">


                <ImageView
                    android:padding="@dimen/dp_1"
                    android:background="#f5f5f5"
                    android:id="@+id/iv_product_img_shop"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_product_name_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="商品标题"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_specifications_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="规格:1L"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_product_price_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="¥135"
                    android:textColor="#fc280c"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal">

                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_reduce"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/shape_btn_reduce"
                        android:text="—" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="数量" />

                    <TextView
                        android:textSize="@dimen/sp_14"
                        android:id="@+id/tv_sum"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="1" />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_add"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_btn_reduce"
                        android:text="+"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>