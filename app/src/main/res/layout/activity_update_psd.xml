<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title_bar_com"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">
            <EditText
                android:textSize="@dimen/sp_16"
                android:id="@+id/et_old_psd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#333"
                android:background="@drawable/shape_et_login"
                android:hint="请输入当前密码"
                android:paddingLeft="@dimen/dp_10" />
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">
            <EditText
                android:textSize="@dimen/sp_16"
                android:id="@+id/et_new_psd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#333"
                android:background="@drawable/shape_et_login"
                android:hint="请输入新密码"
                android:paddingLeft="@dimen/dp_10" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">
            <EditText
                android:textSize="@dimen/sp_16"
                android:id="@+id/et_confirm_new_psd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#333"
                android:background="@drawable/shape_et_login"
                android:hint="再次输入新密码"
                android:paddingLeft="@dimen/dp_10" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:textSize="@dimen/sp_16"
        android:textColor="#fff"
        android:background="@drawable/shape_btn_login"
        android:id="@+id/btn_save_psd"
        android:text="保存"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

</LinearLayout>