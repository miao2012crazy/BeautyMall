<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar_com" />

    <LinearLayout
        android:id="@+id/card_user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="头像"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/tv_user_head_img"
            android:layout_width="@dimen/dp_76"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="@dimen/dp_6" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="昵称"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_user_nick_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_et_login"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/card_user_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:descendantFocusability="blocksDescendants"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="用户ID"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/ic_right"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/sp_16" />
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/card_user_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="性别"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_user_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="年龄"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_user_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_et_login"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/card_user_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="手机号码"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_user_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:textSize="@dimen/sp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_btn_login"
        android:text="提交修改"
        android:textColor="#fff" />

</LinearLayout>